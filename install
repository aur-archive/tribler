post_install() {
    if $(which update-desktop-database 1>&2 >/dev/null); then
        update-desktop-database -q
    fi
}

post_upgrade() {
    if $(which update-desktop-database 1>&2 >/dev/null); then
        update-desktop-database -q
    fi
}

post_remove() {
    if $(which update-desktop-database 1>&2 >/dev/null); then
        update-desktop-database -q
    fi
}
